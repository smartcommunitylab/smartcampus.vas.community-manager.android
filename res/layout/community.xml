<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/community"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:background="@android:color/white" >

    <LinearLayout
        android:id="@+id/user_mp_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp" >

        <TextView
            android:id="@+id/community_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="Smart Campus community"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/sc_dark_gray" />

        <TextView
            android:id="@+id/community_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="Description"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/sc_gray" />

        <TextView
            android:id="@+id/community_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="tags tags tags tags"
            android:textColor="@color/sc_gray" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/community_action"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="3dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/topic_action_desc"
        android:scaleType="centerInside"
        android:src="@drawable/ic_add_gray"
        android:text="@string/community_action_add" /> 
